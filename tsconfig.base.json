{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["development"],
    "paths": {
      "analysis/Module": ["client/apps/analysis/src/remote-entry.ts"],
      "authorization/Module": ["client/apps/authorization/src/remote-entry.ts"],
      "dashboard/Module": ["client/apps/dashboard/src/remote-entry.ts"],
      "portfolio/Module": ["client/apps/portfolio/src/remote-entry.ts"],
      "profiler/Module": ["client/apps/profiler/src/remote-entry.ts"],
      "wallet/Module": ["client/apps/wallet/src/remote-entry.ts"]
    },
    "baseUrl": "."
  }
}
